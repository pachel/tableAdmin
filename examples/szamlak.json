{
    "baseUrl" : "",    
    "url" : "szamlak.php",
    "ajaxUrl" : "Penzugy/ajax",   
    "tables" : ["p_szamlak AS sz","p_egyedek AS e"],
    "where" : "sz.id_egyedek=e.id AND ( sz.statusz=1 OR sz.statusz=2)",
    "last" : "ORDER BY sz.hatarido DESC",
    "id" : "id",
    "addButton" : true,
    "cols": [
        {
            "name": "sz.id",
            "text": "ID",
            "alias": "id",
            "visible": false
        },
        
        {
            "name": "sorszam",
            "text": "Sorszám"
        },
        {
            "name" : "@kibe:=IF(e.id_vevo=e.id_tulaj,'B','K')",
            "alias" : "kibe",
            "text" : "TIPUS",                        
            "visible" : false
        },
        {
            "name": "IF(@kibe='B','Bejövő','Kimenő')",
            "alias" : "asd",
            "text": "Tipus",
            "visible" : false
        },
        {
            "name": "IF(@kibe='B',(SELECT c.nev FROM p_cegek c WHERE c.id=e.id_szallito),(SELECT c.nev FROM p_cegek c WHERE c.id=e.id_vevo))",            
            "alias" : "partner",
            "text": "Partner"
        },
        {
            "name": "teljesites",
            "text": "Teljesítés dátuma"
        },
        {
            "name" : "FORMAT(osszeg_netto*IF(@kibe='B',-1,1),2)",
            "alias" : "netto",
            "text" : "Nettó"
        },
        {
            "name" : "FORMAT(osszeg_brutto*IF(@kibe='B',-1,1),2)",
            "alias" : "brutto",
            "text" : "Bruttó"
        },
        {
            "name" : "(SELECT d.nev FROM p_devizak d WHERE d.id=sz.id_deviza)",
            "alias" : "deviza",
            "text" : "Deviza"
        },
        {
            "name" : "@fizetve:=(SELECT SUM(pm.osszeg) FROM p_penzmozgasok pm WHERE pm.id_szamlak=sz.id)",
            "alias" :"fizetve",
            "text" : "Fizetve",
            "visible" : false
        },
        {
            "name" : "@fizetve:=IF(@fizetve IS NULL,0,@fizetve)",
            "alias" :"fizetve2",
            "text" : "Fizetve",
            "visible" : false
        },
        {
            "name" : "FORMAT(@fizetve,2)",
            "alias" :"fizetve_text",
            "text" : "Fizetve"            
        },
        {
            "name" : "FORMAT(@fizetve-sz.osszeg_brutto,2)",
            "alias" :"egyenleg",
            "text" : "Egyenleg"            
        }
        
    ],
    "formTable" : "p_szamlak",    
    "form": [
        [
            {
                "name": "sorszam",
                "text": "Sorszám",
                "type": "text",
                "required": true,
                "bt_num": 2
            },
            {
                "name": "osszeg_netto",
                "text": "Nettó összeg",
                "type": "text",                
                "bt_num": 4
            },
            {
                "name": "osszeg_brutto",
                "text": "Bruttó összeg",
                "type": "text",                
                "bt_num": 4
            },
            {
                "name": "id_deviza",
                "text": "Deviza",
                "type": "select",
                "data": [{
                        "text": "HUF",
                        "value": 2
                    }],
                "sqlData": "SELECT id AS value,nev AS text,IF(nev='HUF',1,0) AS `default` FROM p_devizak",
                "bt_num": 2
            }
        ],
        [
            {
                "name": "id_partner",
                "text": "Partner",
                "type": "select",
                "bt_num" : 4, 
                "sqlData" : "SELECT id AS value,nev AS text FROM p_szamla_tipusok ORDER BY nev",
                "noSave" : true
            },
            {
                "name": "statusz",
                "text": "Státusz",
                "type": "select",
                "bt_num" : 2,
                "data": [
                    {
                        "text": "Törölt",
                        "value": 0
                    },
                    {
                        "text": "Aktív",
                        "value": 1,
                        "default": true
                    },
                    {
                        "text": "Véglegesített",
                        "value": 2
                    }
                ]
            },
            {
                "name": "id_szamla_tipusok",
                "text": "Tipus",
                "type": "select",
                "bt_num" : 2, 
                "sqlData" : "SELECT id AS value,nev AS text FROM p_szamla_tipusok ORDER BY nev"
            },
            {
                "name": "id_koltseg_tipusok",
                "text": "PROF.CENT",
                "type": "select",
                "bt_num" : 2, 
                "sqlData" : "SELECT id AS value,nev AS text FROM p_koltseg_tipusok ORDER BY nev"
            },
            {
                "name": "id_fizetes_tipusok",
                "text": "FIZ.MOD",
                "type": "select",
                "bt_num" : 2, 
                "sqlData" : "SELECT id AS value,nev AS text FROM p_fizetes_tipusok ORDER BY nev"
            }
        ],
        [
            {
                "name" : "teljesites",
                "text" : "Teljesítés",
                "type" : "date"
            },
            {
                "name" : "beerkezes",
                "text" : "Beérkezés",
                "type" : "date"
            },
            {
                "name" : "hatarido",
                "text" : "Határidő",
                "type" : "date"
            }
        ],
        [
            {
                "name": "megjegyzes",
                "text": "Megjegyzés",
                "type": "textarea"                
            }
        ]
    ]
}
